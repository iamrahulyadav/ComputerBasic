<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhitish">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- QUestion Title-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorWhiteBg"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/fragmentComputerQuiz_QuestionName_Textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra=".9sp"
                        android:text="Title"
                        android:textColor="@color/colorBlack"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--Options cardview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:id="@+id/fragmentComputerQuiz_optionA_Cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorWhiteBg"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="16dp"
                            android:text="1."
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/fragmentComputerQuiz_optionA_Textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="16dp"
                            android:text="Option A"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragmentComputerQuiz_optionB_Cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorWhiteBg"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="16dp"
                            android:text="2."
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/fragmentComputerQuiz_optionB_Textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="16dp"
                            android:text="Option B"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="normal"

                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragmentComputerQuiz_optionC_Cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    android:textAlignment="center"
                    app:cardBackgroundColor="@color/colorWhiteBg"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="16dp"
                            android:text="3."
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/fragmentComputerQuiz_optionC_Textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="16dp"
                            android:text="Option C"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="normal"

                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fragmentComputerQuiz_optionD_Cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/colorWhiteBg"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="16dp"
                            android:text="4."
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/fragmentComputerQuiz_optionD_Textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="16dp"
                            android:text="Option D"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="normal"

                            />
                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>


            <!--Explaination Cardview-->
            <android.support.v7.widget.CardView
                android:id="@+id/question_explaination_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/colorWhiteBg"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="Explaination : "
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlackish"
                        android:textStyle="italic"
                        android:visibility="visible" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        app:cardBackgroundColor="@color/colorBlackish"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"></android.support.v7.widget.CardView>

                    <!--Explaination Textvew-->
                    <TextView
                        android:id="@+id/question_explaination_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:lineSpacingExtra="2sp"
                        android:text=""
                        android:textColor="@color/colorBlack"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>