<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightPrimary"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.computer.basic.quiz.craftystudio.computerbasic.DiplayListActivity"
    tools:showIn="@layout/activity_diplay_list">


    <ListView
        android:id="@+id/display_item_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:divider="@color/colorTransparent">

    </ListView>

    <LinearLayout
        android:id="@+id/display_list_banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical"
        />

</LinearLayout>
