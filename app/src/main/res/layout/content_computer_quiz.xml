<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhitish"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.computer.basic.quiz.craftystudio.computerbasic.ComputerQuizActivity"
    tools:showIn="@layout/activity_computer_quiz">

    <!--Question No Display -->
    <TextView
        android:id="@+id/computer_quiz_questionNumber_Textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:text="Question 1"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="normal" />

    <android.support.v4.view.ViewPager
        android:id="@+id/computer_quiz_activity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorWhitish"
        android:visibility="visible">

    </android.support.v4.view.ViewPager>


</LinearLayout>
